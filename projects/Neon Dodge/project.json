{
  "name": "Neon Dodge",
  "version": "1.0.0",
  "description": "A cyberpunk-themed top-down shooter where players dodge falling obstacles while collecting gold credits",
  "author": "Cyberpunk Game Studios",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cyberpunk-games/neon-dodge"
  },
  "keywords": [
    "cyberpunk",
    "shooter",
    "html5-game",
    "canvas",
    "javascript",
    "es6",
    "web-game"
  ],
  "game": {
    "title": "Neon Dodge",
    "genre": "top-down shooter",
    "coreMechanic": "The player must dodge falling obstacles while collecting gold credits",
    "winCondition": "Survive as long as possible - score based on time survived",
    "lossCondition": "Game over when health reaches zero from enemy collisions",
    "scoring": {
      "basePerSecond": 10,
      "goldValue": 100,
      "enemyKillValue": 100,
      "waveBonus": 500
    }
  },
  "features": [
    "Multiple enemy types (Basic, Seeker, Shooter)",
    "Dash mechanic with cooldown system",
    "Wave-based difficulty progression",
    "Particle effects system",
    "Responsive design for desktop and mobile",
    "Touch controls for mobile devices",
    "Difficulty settings (Neon/Easy, Synth/Medium, Cyber/Hard)",
    "Power-up system (optional)",
    "Achievement system (optional)",
    "Leaderboard system (optional)"
  ],
  "controls": {
    "desktop": {
      "movement": "WASD or Arrow Keys",
      "dash": "Spacebar",
      "pause": "Escape"
    },
    "mobile": {
      "movement": "Touch and drag",
      "dash": "Double-tap",
      "pause": "Pause button"
    }
  },
  "technical": {
    "engine": "HTML5 Canvas",
    "language": "JavaScript ES6+",
    "architecture": "Modular 6-file system",
    "dependencies": "None (pure JavaScript)",
    "compatibility": {
      "browsers": ["Chrome 60+", "Firefox 55+", "Safari 11+", "Edge 79+"],
      "mobile": true,
      "requires": "Modern browser with ES6+ support"
    },
    "performance": {
      "targetFPS": 60,
      "canvasSize": "Responsive",
      "memoryManagement": "Object pooling for particles"
    }
  },
  "fileStructure": {
    "coreFiles": [
      "index.html",
      "style.css",
      "script.js",
      "config.js",
      "entities.js",
      "project.json"
