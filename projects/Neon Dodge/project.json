    "optionalFiles": [
      "audio.js",
      "leaderboard.js",
      "powerups.js",
      "achievements.js"
    ]
  },
  "assets": {
    "fonts": ["Orbitron (Google Fonts)", "Exo 2 (Google Fonts)"],
    "colors": {
      "primary": "#00f3ff",
      "secondary": "#ff79c6",
      "background": "#0a0a1a",
      "accent": "#50fa7b",
      "warning": "#ff5555"
