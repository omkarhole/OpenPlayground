{
  "name": "gravity-shift-platformer",
  "version": "1.0.0",
  "description": "A unique platformer game where you flip gravity to navigate challenging levels filled with spikes, platforms, and collectibles",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "serve": "npx serve .",
    "dev": "npx live-server ."
  },
  "keywords": [
    "game",
    "platformer",
    "gravity",
    "puzzle",
    "canvas",
    "html5-game",
    "javascript-game",
    "retro",
    "pixel-art",
    "physics"
  ],
  "author": "Claude",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/gravity-shift-platformer.git"
  },
  "gameInfo": {
    "title": "Gravity Shift",
    "subtitle": "Flip Reality. Defy Physics.",
    "genre": "Puzzle Platformer",
    "difficulty": "Progressive",
    "levels": 4,
    "uniqueMechanic": "Gravity Flipping - Press SPACE to invert gravity and walk on ceilings!"
  },
  "controls": {
    "movement": "A/D or Arrow Keys",
    "gravityFlip": "SPACE",
    "description": "Navigate platforms by flipping gravity to reach the portal"
  },
  "features": [
    "Unique gravity-flipping mechanic",
    "4 progressively challenging levels",
    "Multiple lives system",
    "Star collection for scoring",
    "Time tracking per level",
    "Spike obstacles and hazards",
    "Portal-based level completion",
    "Smooth player trail effects",
    "Retro pixel-art style",
    "Colorful gradient backgrounds",
    "Animated UI elements",
    "Level completion screen",
    "Game over with statistics",
    "Responsive controls",
    "Physics-based movement"
  ],
  "gameObjects": {
    "player": {
      "size": 30,
      "color": "#00ff88",
      "abilities": ["move", "flip_gravity"],
      "lives": 3
    },
    "platforms": {
      "color": "#4a5568",
      "solid": true
    },
    "spikes": {
      "color": "#ff006e",
      "deadly": true
    },
    "stars": {
      "color": "#ffd60a",
      "collectible": true,
      "points": 1
    },
    "portal": {
      "color": "#8338ec",
      "type": "level_exit"
    }
  },
  "levelDesign": {
    "level1": {
      "name": "Tutorial",
      "description": "Learn the basics of gravity flipping",
      "stars": 2,
      "difficulty": "Easy"
    },
    "level2": {
      "name": "The Gap",
      "description": "Master precise gravity flips across gaps",
      "stars": 3,
      "difficulty": "Medium"
    },
    "level3": {
      "name": "Spike Maze",
      "description": "Navigate through dangerous spike corridors",
      "stars": 4,
      "difficulty": "Hard"
    },
    "level4": {
      "name": "Gravity Master",
      "description": "The ultimate test of your gravity-flipping skills",
      "stars": 5,
      "difficulty": "Expert"
    }
  },
  "visualStyle": {
    "theme": "Retro Futuristic",
    "colors": {
      "player": "#00ff88",
      "platforms": "#4a5568",
      "spikes": "#ff006e",
      "stars": "#ffd60a",
      "portal": "#8338ec",
      "background": "Gradient purple to pink"
    },
    "effects": [
      "Player trail",
      "Glow effects",
      "Shadow blur",
      "Particle explosions",
      "Rotating stars",
      "Spinning portal",
      "Animated backgrounds"
    ]
  },
  "physics": {
    "gravity": 0.5,
    "moveSpeed": 5,
    "maxFallSpeed": 15,
    "friction": 0.8
  },
  "browser_support": [
    "Chrome >= 90",
    "Firefox >= 88",
    "Safari >= 14",
    "Edge >= 90"
  ]
}
