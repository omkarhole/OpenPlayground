{
  "name": "mathematical-function-visualizer",
  "version": "1.0.0",
  "description": "An interactive mathematical tool to visualize functions, calculate derivatives, find critical points, and analyze mathematical expressions with real-time graphing",
  "main": "math-index.html",
  "scripts": {
    "start": "npx http-server -p 8080 -o",
    "dev": "npx live-server --port=8080"
  },
  "keywords": [
    "mathematics",
    "calculus",
    "function-plotter",
    "derivative-calculator",
    "graphing-calculator",
    "visualization",
    "algebra",
    "trigonometry",
    "numerical-analysis",
    "education",
    "interactive-math"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mathematical-function-visualizer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mathematical-function-visualizer/issues"
  },
  "homepage": "https://github.com/yourusername/mathematical-function-visualizer#readme",
  "features": [
    "Real-time function plotting with customizable ranges",
    "Automatic derivative calculation and visualization",
    "Critical point detection (maxima, minima, inflection points)",
    "Root finding algorithm",
    "Point-by-point analysis with derivatives",
    "Support for algebraic, trigonometric, exponential, and logarithmic functions",
    "Interactive parameter controls with sliders",
    "Grid and axis visualization",
    "Statistical analysis of function behavior",
    "Preset function library for quick testing",
    "Responsive design for mobile and desktop",
    "Mathematical notation support"
  ],
  "technical_details": {
    "frontend": "Vanilla JavaScript, HTML5 Canvas",
    "algorithms": [
      "Numerical differentiation using central difference method",
      "Newton-Raphson inspired root finding",
      "Critical point detection via derivative sign changes",
      "Adaptive scaling for optimal visualization"
    ],
    "browser_support": [
      "Chrome",
      "Firefox",
      "Safari",
      "Edge"
    ]
  }
}
